{
  "manifest_version": 3,
  "name": "Bug YouTube Skip Ads @leodigory",
  "version": "1.2",
  "description": "Adiciona automaticamente um ponto aos URLs de vídeos do YouTube para pular anúncios, com prevenção robusta de loop.",
  "icons": {
    "16": "icon.svg",
    "32": "icon.svg",
    "48": "icon.svg",
    "128": "icon.svg"
  },
  "permissions": ["storage"],
  "host_permissions": ["*://*.youtube.com/*"],
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"],
      "run_at": "document_start",
      "all_frames": false
    }
  ],
  "author": "leodigory",
  "homepage_url": "https://github.com/leodigory/Bug-YouTube-Skip-Ads"
}